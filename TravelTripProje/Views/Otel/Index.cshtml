@using TravelTripProje.Models.Siniflar
@model List<Otel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_TestLayout.cshtml";
}

<!DOCTYPE HTML>
<html>
<head>
    <link href="~/web2/css/bootstrap.css" rel='stylesheet' type='text/css' />
    <link href="~/web2/css/style.css" rel='stylesheet' type='text/css' />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Personal Blog Responsive web template, Bootstrap Web Templates, Flat Web Templates, Andriod Compatible web template,
	Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyErricsson, Motorola web design" />
    <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
    <!----webfonts---->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
    <link href='http://fonts.googleapis.com/css?family=Oswald:100,400,300,700' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Lato:100,300,400,700,900,300italic' rel='stylesheet' type='text/css'>
    <!----//webfonts---->

</head>
<body>
    <!--/header-->
    <div class="single">
        <div class="container" style="padding-top:20px; width:80%;">
            <div class="col-lg-9 col-md-9 col-sm-9 col-xs-12 single-main">
                @foreach (var x in Model)
                {
                    <div class="single-grid" style="width:100%; height:100%;">
                        <div class="col-lg-4 col-md-12 col-sm-12 col-xs-12" style="display:flex; justify-content:center;">
                            <img src="@x.Otelimage" alt="" style="margin-bottom:10px; width:350px; height:185px;" />
                        </div>
                        <a href="/Otel/OtelDetails/@x.Id" style="margin-left:15px;"> @x.Baslik</a>
                        <br/>
                        <span style="font-size: 11px; margin-left:15px; ">
                            @for (int i = 0; i < x.Yildiz; i++)
                            {
                                <i class="fa fa-star" style="color:gold;"></i>
                            }
                            @for (int i = 0; i < 5 - x.Yildiz; i++)
                            {
                                <i class="far fa-star" style="color:silver"></i>
                            }
                        </span>
                        <div class="col-lg-8 col-md-0 col-sm-0 col-xs-0">
                            <p>
                                @x.Aciklama.Substring(0, 300) .....<br />
                                <a href="/Otel/OtelDetails/@x.Id" style="margin-top:0px;"> Devamı >>></a>
                            </p>
                        </div>
                    </div>
                    <br />
                }
            </div>


            <div class="col-lg-3 col-md-3 col-sm-3 col-xs-0 side-content" style="margin-top: 20px;">
                @Html.Action("BesYildizOtels", "Otel")
                @Html.Action("SonOtelYorums", "Otel")
            </div>
        </div>
    </div>
</body>
</html>

