@using TravelTripProje.Models.Siniflar
@model List<Blog>

<!DOCTYPE HTML>
<html>
<body>
    <div class="con-bot">
        @foreach (var x in Model)
        {
            <div class="left" style="margin-left:70px;">
                <div class="bot-left">
                    <img src="@x.BlogImage" style="width:100%; height:auto;"  alt="" />
                </div>
                <div class="left-text">
                    <h4>@x.Baslik.Substring(0, 15)...</h4>
                    <span class="doller">@x.Tarih.ToString("dd.MM.yyyy")</span>
                    <p>@x.Aciklama.Substring(0, 80)...</p>
                    <p><a href="/Blog/BlogDetay/@x.ID"><span class="read">Devamını Oku >></span></a></p>
                </div>
            </div>
        }
    </div>
</body>
</html>


