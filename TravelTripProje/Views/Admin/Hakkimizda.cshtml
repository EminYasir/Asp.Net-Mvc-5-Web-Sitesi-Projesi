@using TravelTripProje.Models.Siniflar
@model List<Hakkimizda>
@{
    ViewBag.Title = "Hakkimizda";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Hakkımızda Sayfası</h2>

<br />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>RESİM</th>
        <th>AÇIKLAMA</th>
        <th>GÜNCELLE</th>
    </tr>

    @foreach (var x in Model)
    {
        <tr>
            <td>@x.ID</td>
            <td>@x.FotoUrl</td>
            <td>@x.Aciklama.Substring(0,250)...</td>
            <td><a href="/Admin/HakkimizdaGetir/@x.ID" class="btn btn-primary">Güncelle</a></td>
        </tr>
    }
</table>