@model TravelTripProje.Models.Siniflar.Otel
@{
    ViewBag.Title = "OtelGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Otel Güncelleme Sayfası</h2>

<br />
@using (Html.BeginForm("OtelGuncelle", "Admin", FormMethod.Post))
{
    @Html.LabelFor(x => x.Id)
    @Html.TextBoxFor(x => x.Id, new { @class = "form-control", @readonly = "readonly" })
