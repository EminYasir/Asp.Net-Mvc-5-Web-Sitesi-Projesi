@model TravelTripProje.Models.Siniflar.iletisim
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_TestLayout.cshtml";
}


<!DOCTYPE HTML>
<html>
<head>
    <title>İletişim</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous">
    <link rel="stylesheet" href="~/web/css/style.css" type="text/css" media="all" />
    <link href="https://fonts.googleapis.com/css2?family=Raleway:wght@300&amp;display=swap" rel="stylesheet">
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
</head>
<body>
    <div class="contact" style="height:100%;width:100%;">
        <div class="wrap">
            <div class="contact-top">
                <h3>İletişim Bilgileri</h3>
                <p> Düşünceleriniz ve görüşleriniz için bizim ile iletişime geçebilirsiniz.. </p>
            </div>
            <form class="form-group" id="contactForm" method="post">
                <div class="form">
                    <label for="AdSoyad">İsim:</label><br />
                    <input style="border:1px solid black;" type="text" id="AdSoyad" name="AdSoyad" placeholder="Adınız">
                    <br />
                    <label for="Mail">Mail:</label><br />
                    <input style="border:1px solid black;" type="text" id="Mail" name="Mail" placeholder="Mail">
                    <br />
                    <label for="Konu">Konu:</label><br />
                    <input style="border:1px solid black;" type="text" id="Konu" name="Konu" placeholder="Konu">
                    <br />
                </div>
                <div class="form1">
                    <label for="Mesaj">Mesaj:</label><br />
                    <textarea style="border:1px solid black;" type="text" id="Mesaj" name="Mesaj" placeholder="Mesajınız"></textarea>
                </div>
                <button class="btn btn-primary">Gönder</button>
            </form>


            <br />
            <br />
            <div class="clear"></div>
            <div class="contact-bottom">
                <div class="contact-left">
                    @Html.Action("Adres", "Iletisim")
                </div>
                <div class="contact-map" style="border:1px solid black; width:53%;height:245px;">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3009.7174110291253!2d28.866239915662504!3d41.031438025947814!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14cabad0554c4573%3A0x26a62af99055943b!2zTWVya2V6LCA3MjAuIFNrLiBObzo1IEQ6NSwgMzQyMDAgQmHEn2PEsWxhci_EsHN0YW5idWw!5e0!3m2!1sen!2str!4v1676594412606!5m2!1sen!2str" width="506" height="248" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                </div>
                <div class="clear"></div>
            </div>
            <br />
            <br />
            <br />
            <br />

        </div>
    </div>
</body>
</html>
